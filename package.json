{
  "name": "cms-admin",
  "version": "0.3.2",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mutoe-cms/cms-admin"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test:unit": "jest --coverage",
    "test": "yarn tsc && yarn test:unit",
    "lint": "eslint 'src/**/*.ts?(x)'",
    "swagger": "bash scripts/sync-swagger-api.sh",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dayjs": "^1.10.4",
    "history": "^5.0.0",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-quill": "^2.0.0-beta.2",
    "react-router-dom": "^6.0.0-beta.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@testing-library/dom": "^7.30.3",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.1",
    "@testing-library/user-event": "^13.1.1",
    "@types/classnames": "^2.2.11",
    "@types/lodash": "^4.14.168",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@vitejs/plugin-react-refresh": "^1.3.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "classnames": "^2.3.1",
    "cz": "^1.8.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.23.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-flowtype": "^5.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.2",
    "lint-staged": "^10.5.4",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.32.8",
    "swagger-typescript-api": "^8.0.2",
    "typescript": "^4.2.3",
    "vite": "^2.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": false
      }
    },
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "standard-with-typescript"
    ],
    "rules": {
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "no-void": "off",
      "no-console": "warn",
      "no-debugger": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/strict-boolean-expressions": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/consistent-type-assertions": "off",
      "@typescript-eslint/prefer-nullish-coalescing": "off",
      "@typescript-eslint/no-invalid-void-type": "off",
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "array"
        }
      ],
      "react/prop-types": "off",
      "react/jsx-boolean-value": [
        "error",
        "never"
      ],
      "react/jsx-closing-bracket-location": [
        "error",
        "line-aligned"
      ],
      "react/jsx-curly-brace-presence": [
        "error",
        "never"
      ],
      "react/jsx-curly-spacing": [
        "error",
        "never"
      ],
      "react/jsx-equals-spacing": "error",
      "react/jsx-first-prop-new-line": "error",
      "react/jsx-handler-names": "warn",
      "react/jsx-indent": [
        "error",
        2
      ],
      "react/jsx-indent-props": [
        "error",
        2
      ],
      "react/jsx-max-props-per-line": [
        "error",
        {
          "maximum": 1,
          "when": "multiline"
        }
      ],
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": true,
          "shorthandFirst": true,
          "noSortAlphabetically": true,
          "reservedFirst": true
        }
      ],
      "react/jsx-tag-spacing": "error",
      "react/jsx-wrap-multilines": [
        "error",
        {
          "declaration": "ignore",
          "assignment": "ignore",
          "return": "ignore",
          "arrow": "ignore",
          "condition": "ignore",
          "logical": "ignore",
          "prop": "ignore"
        }
      ],
      "react/jsx-props-no-multi-spaces": "error",
      "react/jsx-pascal-case": "error",
      "react/jsx-one-expression-per-line": [
        "error",
        {
          "allow": "single-child"
        }
      ],
      "react/jsx-no-useless-fragment": "error",
      "jest/no-jasmine-globals": "off",
      "jest/no-conditional-expect": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "overrides": [
      {
        "files": [
          "src/services/**"
        ],
        "rules": {
          "@typescript-eslint/no-unused-vars": "off",
          "@typescript-eslint/promise-function-async": "off",
          "@typescript-eslint/no-use-before-define": "off",
          "no-use-before-define": "off"
        }
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "globals": {
      "vue-jest": {
        "babelConfig": true
      }
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.{form,context}.ts?(x)",
      "!src/services/{index,api}.ts",
      "!src/constants/**",
      "!src/{index,App}.tsx",
      "!src/{appMenu,serviceWorker,fixtures}.ts"
    ],
    "coverageThreshold": {
      "src/**/*.ts?(x)": {
        "branches": -10,
        "functions": -5,
        "statements": -15,
        "lines": -20
      }
    },
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "\\.(css|sass|scss)$": "<rootDir>/scripts/jest/mock-css.js",
      "\\.(jpg|svg)$": "<rootDir>/scripts/jest/mock-file.js"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
