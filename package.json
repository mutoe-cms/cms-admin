{
  "name": "cms-admin",
  "version": "0.3.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/mutoe-cms/cms-admin"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test:unit": "jest --coverage",
    "test": "pnpm tsc && pnpm test:unit",
    "lint": "eslint .",
    "swagger": "bash scripts/sync-swagger-api.sh",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "pnpm changelog && git add CHANGELOG.md"
  },
  "lint-staged": {
    "src/**/*.ts?(x)": "eslint --fix"
  },
  "dependencies": {
    "axios": "^1.2.6",
    "dayjs": "^1.11.7",
    "history": "^5.3.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.8.0",
    "semantic-ui-css": "^2.5.0",
    "semantic-ui-react": "^2.1.4"
  },
  "devDependencies": {
    "@mutoe/eslint-config-preset-react": "^2.2.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react-swc": "^3.1.0",
    "classnames": "^2.3.2",
    "eslint": "^8.33.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "sass": "^1.58.0",
    "swagger-typescript-api": "^12.0.2",
    "typescript": "^4.9.5",
    "vite": "^4.1.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@mutoe/eslint-config-preset-react"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": [
        "error",
        {
          "allowTypedFunctionExpressions": true
        }
      ],
      "unicorn/no-array-callback-reference": "off"
    },
    "overrides": [
      {
        "files": [
          "src/services/**"
        ],
        "rules": {
          "@typescript-eslint/no-unused-vars": "off",
          "@typescript-eslint/promise-function-async": "off",
          "@typescript-eslint/no-use-before-define": "off",
          "no-use-before-define": "off"
        }
      },
      {
        "files": [
          "src/**/use*.ts?(x)",
          "src/**/*.context.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "off"
        }
      },
      {
        "files": [
          "**/*.{test,spec}.ts?(x)"
        ],
        "rules": {
          "unicorn/consistent-destructuring": "off"
        }
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "globals": {
      "vue-jest": {
        "babelConfig": true
      }
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.{form,context}.ts?(x)",
      "!src/services/{index,api}.ts",
      "!src/constants/**",
      "!src/{index,App}.tsx",
      "!src/{appMenu,serviceWorker,fixtures}.ts"
    ],
    "coverageThreshold": {
      "src/**/*.ts?(x)": {
        "branches": -10,
        "functions": -5,
        "statements": -15,
        "lines": -20
      }
    },
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "\\.(css|sass|scss)$": "<rootDir>/scripts/jest/mock-css.js",
      "\\.(jpg|svg)$": "<rootDir>/scripts/jest/mock-file.js"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
